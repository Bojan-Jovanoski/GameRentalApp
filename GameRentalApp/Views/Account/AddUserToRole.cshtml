@model GameRentalApp.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>AddUserToRole</h2>

<h2>Add user with this email to a role:</h2>
@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control" })

    </div>

    <button class="btn btn-default" type="submit">Save</button>
}
